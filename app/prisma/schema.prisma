generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Session {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userid], references: [id])
  userid Int
  device Device @relation(fields: [deviceid], references: [id])
  deviceid Int
  driving DrivingHistory[]

  @@index([userid])
  @@index([deviceid])
}
model User {
  id Int @id @default(autoincrement())
  email String @unique
  username String
  password String 
  sessions Session[]
  rotation String
  socketId String? @unique
}

model Device {
  id Int @id @default(autoincrement())
  sessions Session[]
}

model DrivingHistory {
  history_id Int @id @default(autoincrement())
  session Session @relation(fields: [session_id], references: [id])
  session_id Int
  rotation Float? 
  lat Float? 
  long Float?
  sonar_forward Int?
  sonar_left Int?
  sonar_right Int?
  time DateTime
  @@index([session_id])
}